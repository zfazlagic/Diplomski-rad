<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="diplomski.Views.RegistracijaKorisnika">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Osnovni podaci"/>
            <Entry Placeholder="Ime" x:Name="enrtyIme"/>
            <Entry Placeholder="Prezime" x:Name="entryPrezime"/>
            <Entry Placeholder="Email" x:Name="entryEmail"/>
            <Entry Placeholder="Password" x:Name="entryPassword"/>
            <Label Text="Podaci o obrazovanju"/>
            <Picker Title="Stečeno obrazovanje">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Osnovna škola</x:String>
                        <x:String>Srednja škola</x:String>
                        <x:String>Bachelor</x:String>
                        <x:String>Magistar</x:String>
                        <x:String>Doktor nauka</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Entry Placeholder="Naziv završene obrazovne institucije" x:Name="entryNazivFakulteta"/>
            <Entry Placeholder="Godina završetka obrazovanja" x:Name="entryGodinaZavrsetka"/>
            <Button Text="Registruj se!"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>